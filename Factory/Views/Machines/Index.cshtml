@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>List of Machines</h2>

@if (Model.Count == 0)
{
  <p>There are currently no machines</p>
}
<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add Machine", "Create")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>