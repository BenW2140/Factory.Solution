@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>List of Engineers</h2>

@if (Model.Count == 0)
{
  <p>There are currently no engineers</p>
}
<ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

<p>@Html.ActionLink("Add Engineer", "Create")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>